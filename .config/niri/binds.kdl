// niri 窗口管理器 快捷键配置
// 整理后按功能模块分类，便于查阅和维护
binds {
    // ===================== 基础功能 =====================
    // 打开帮助菜单（快捷键说明浮层）
    Mod+Shift+Slash { show-hotkey-overlay; }

    // 关闭当前窗口（禁止重复触发）
    Mod+Q repeat=false { close-window; }

    // 退出 niri 窗口管理器（默认注释，避免误触）
    // Mod+Shift+E { quit skip-confirmation=true; }

    // 关闭显示器电源（任意输入可唤醒）
    Mod+Shift+P { power-off-monitors; }

    // 开启/关闭快捷键抑制（用于远程/虚拟机场景）
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }


    // ===================== 应用启动 =====================
    Mod+T hotkey-overlay-title="Open a Terminal: foot" { spawn "foot"; }          // 打开终端
    Mod+B hotkey-overlay-title="Run an Application: firefox" { spawn "firefox"; } // 打开火狐浏览器
    Mod+E hotkey-overlay-title="Run an Application: nautilus" { spawn "nautilus"; } // 打开文件管理器
    Mod+D hotkey-overlay-title="Toggle Spotlight" { spawn "dms" "ipc" "call" "spotlight" "toggle"; } // 打开/关闭 Spotlight
    Ctrl+Shift+L hotkey-overlay-title="Lock Screen" { spawn "dms" "ipc" "call" "lock" "lock"; } // 锁屏


    // ===================== 尺寸调整 =====================
    // 窗口宽度调整
    Mod+Minus { set-window-width "-10%"; }          // 减小窗口宽度（10%）
    Mod+Equal { set-window-width "+10%"; }          // 增大窗口宽度（10%）

    // 窗口高度调整
    Mod+Shift+Minus { set-window-height "-10%"; }   // 减小窗口高度（10%）
    Mod+Shift+Equal { set-window-height "+10%"; }   // 增大窗口高度（10%）

    // 预设尺寸切换/重置
    Mod+R { switch-preset-column-width; }           // 循环切换预设列宽（窄→中→宽）
    Mod+Shift+R { switch-preset-window-height; }    // 循环切换预设窗口高度
    Mod+Ctrl+R { reset-window-height; }             // 重置窗口高度为默认值


    // ===================== 全屏/扩展 =====================
    Mod+F { maximize-column; }                      // 最大化当前列（列独占屏幕）
    Mod+Shift+F { fullscreen-window; }              // 单个窗口全屏（窗口独占屏幕）
    Mod+Ctrl+F { expand-column-to-available-width; } // 扩展列到可用空间（非全屏，默认注释）
    Mod+Shift+W { toggle-windowed-fullscreen; }     // 阅读模式（隐藏应用标签栏）


    // ===================== 聚焦操作 =====================
    // 基础方向聚焦（列/窗口/工作区）
    Mod+H     { focus-column-left; }                // 聚焦左侧列
    Mod+J     { focus-window-or-workspace-down; }   // 聚焦下方窗口/工作区
    Mod+K     { focus-window-or-workspace-up; }     // 聚焦上方窗口/工作区
    Mod+L     { focus-column-right; }               // 聚焦右侧列

    // 显示器方向聚焦
    Mod+Shift+H     { focus-monitor-left; }         // 聚焦左侧显示器
    Mod+Shift+J     { focus-monitor-down; }         // 聚焦下方显示器
    Mod+Shift+K     { focus-monitor-up; }           // 聚焦上方显示器
    Mod+Shift+L     { focus-monitor-right; }        // 聚焦右侧显示器

    // 工作区聚焦（触摸板三指上下滑也可触发）
    Mod+U     { focus-workspace-down; }             // 聚焦下方工作区
    Mod+I     { focus-workspace-up; }               // 聚焦上方工作区

    // 列首尾聚焦
    Mod+Left { focus-column-first; }                // 聚焦第一列
    Mod+Right { focus-column-last; }                // 聚焦最后一列

    // 数字索引聚焦工作区
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    // 滚轮聚焦（带冷却时间防误触）
    Mod+Shift+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }  // 滚轮下滑聚焦下方工作区
    Mod+Shift+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }    // 滚轮上滑聚焦上方工作区
    Mod+WheelScrollRight      { focus-column-right; }                        // 滚轮右滑聚焦右侧列
    Mod+WheelScrollLeft       { focus-column-left; }                         // 滚轮左滑聚焦左侧列
    Mod+WheelScrollDown      { focus-column-right; }                         // 滚轮下滑聚焦右侧列（兼容横向滚动）
    Mod+WheelScrollUp        { focus-column-left; }                          // 滚轮上滑聚焦左侧列（兼容横向滚动）


    // ===================== 移动操作 =====================
    // 基础方向移动列/窗口
    Mod+Ctrl+H     { move-column-left; }                     // 移动当前列到左侧
    Mod+Ctrl+J     { move-window-down-or-to-workspace-down; } // 移动窗口到下方/下方工作区
    Mod+Ctrl+K     { move-window-up-or-to-workspace-up; }     // 移动窗口到上方/上方工作区
    Mod+Ctrl+L     { move-column-right; }                    // 移动当前列到右侧

    // 移动列到指定方向显示器
    Mod+Shift+Ctrl+H     { move-column-to-monitor-left; }    // 移动列到左侧显示器
    Mod+Shift+Ctrl+J     { move-column-to-monitor-down; }    // 移动列到下方显示器
    Mod+Shift+Ctrl+K     { move-column-to-monitor-up; }      // 移动列到上方显示器
    Mod+Shift+Ctrl+L     { move-column-to-monitor-right; }   // 移动列到右侧显示器

    // 工作区移动
    Mod+Ctrl+U         { move-column-to-workspace-down; }    // 移动当前列到下方工作区
    Mod+Ctrl+I         { move-column-to-workspace-up; }      // 移动当前列到上方工作区
    Mod+Shift+U         { move-workspace-down; }             // 移动当前工作区到下方
    Mod+Shift+I         { move-workspace-up; }               // 移动当前工作区到上方

    // 列首尾移动
    Mod+Ctrl+Left { move-column-to-first; }                  // 移动当前列到第一列
    Mod+Ctrl+Right { move-column-to-last; }                  // 移动当前列到最后一列

    // 数字索引移动列到指定工作区
    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }

    // 滚轮移动列（带冷却时间防误触）
    Mod+Ctrl+Shift+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; } // 滚轮下滑移动列到下方工作区
    Mod+Ctrl+Shift+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }   // 滚轮上滑移动列到上方工作区
    Mod+Ctrl+WheelScrollRight { move-column-right; }                                  // 滚轮右滑移动列到右侧
    Mod+Ctrl+WheelScrollLeft  { move-column-left; }                                   // 滚轮左滑移动列到左侧
    Mod+Ctrl+WheelScrollDown { move-column-right; }                                   // 滚轮下滑移动列到右侧（兼容横向滚动）
    Mod+Ctrl+WheelScrollUp   { move-column-left; }                                    // 滚轮上滑移动列到左侧（兼容横向滚动）

    // 窗口跨列移动
    Mod+BracketLeft  { consume-or-expel-window-left; }   // 移动当前窗口到左列最下方（单列化）
    Mod+BracketRight { consume-or-expel-window-right; }  // 移动当前窗口到右列最下方（单列化）
    Mod+Comma  { consume-window-into-column; }           // 将右列窗口移入当前列最下方
    Mod+Period { expel-window-from-column; }             // 将当前列最下方窗口移到右列


    // ===================== 视图控制 =====================
    Mod+O repeat=false { toggle-overview; }               // 打开/关闭概览（触摸板四指上下滑也可触发）
    Mod+C { center-column; }                              // 居中当前聚焦列
    Mod+Ctrl+C { center-visible-columns; }                // 居中所有完全可见列
    Mod+V       { toggle-window-floating; }               // 切换窗口为浮动/平铺模式
    Mod+Shift+V { switch-focus-between-floating-and-tiling; } // 切换焦点（浮动/平铺窗口）
    Mod+W { toggle-column-tabbed-display; }               // 切换列的标签式显示（垂直标签）


    // ===================== 截图功能 =====================
    Mod+S {
      spawn "~/bash/screenshot.bash" "-f"  // 全屏截图
    }
    Mod+Shift+S {
      spawn "~/bash/screenshot.bash" "-r"  // 区域截图
    }
    Mod+Alt+S {
      spawn "~/bash/screenshot.bash" "-w"  // 窗口截图
    }
}

